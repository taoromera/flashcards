
<div class="login-fields">

  <h1>Log in</h1>

  <%= form_tag sessions_path do %>
    <p>
      <%= label_tag :email %><br />
      <%= text_field_tag :email, params[:email] %>
    </p>
    <p>
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </p>
    <p><%= button_tag("Log in", :class => "btn-primary-xl") %></p>
  <% end %>

</div>
